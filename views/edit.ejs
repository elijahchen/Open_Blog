<% include ./partials/header%>

<div class="ui main text container">
    <div class="ui huge header">Editing <%= blog.title %></div>
    <form class="ui form" action="/blogs" method="post">
        <div class="field">
            <label>Title</label>
            <input type="text" name="blog[title]" value="<%= blog.title %>">
        </div>
        <div class="field">
            <label>Image URL</label>
            <input type="text" name="blog[image]" value="<%= blog.image %>">
        </div>
        <div class="field">
            <label>Blog Post</label>
            <textarea name="blog[body]">
                <%= blog.body %>
            </textarea>
        </div>
        <input class="ui green big basic button" type="submit">
    </form>
</div>

<% include ./partials/footer%>